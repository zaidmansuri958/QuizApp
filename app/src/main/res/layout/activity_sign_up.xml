<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zaidMansuri.quizapp.SignUp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:baselineAligned="false"
        android:elevation="-5dp"
        app:cardCornerRadius="10dp"
        android:translationZ="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_card_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:elevation="50dp"
                android:src="@drawable/mainlogo"
                android:translationZ="50dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#13238E"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="10dp"
                android:fontFamily="@font/chau_philomene_one_italic"
                android:hint="Name"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="10dp"
                android:fontFamily="@font/chau_philomene_one_italic"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/contact"
                android:drawablePadding="10dp"
                android:fontFamily="@font/chau_philomene_one_italic"
                android:hint="Mobile number"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="10dp"
                android:fontFamily="@font/chau_philomene_one_italic"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="22sp" />

            <Button
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/questionbg"
                android:fontFamily="@font/chau_philomene_one_italic"
                android:padding="10dp"
                android:text="signup"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chau_philomene_one_italic"
                android:gravity="center"
                android:text="Already have an account ?"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>