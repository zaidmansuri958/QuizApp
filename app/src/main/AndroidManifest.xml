<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zaidMansuri.quizapp">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizApp"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-9829502421511765~8092819576"/>

        <activity
            android:name="com.zaidMansuri.quizapp.Reward"
            android:exported="false"/>
        <activity
            android:name="com.zaidMansuri.quizapp.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.zaidMansuri.quizapp.Login"
            android:exported="false" />
        <activity
            android:name="com.zaidMansuri.quizapp.SignUp"
            android:exported="false"></activity>
        <activity
            android:name="com.zaidMansuri.quizapp.Question"
            android:exported="false"
            android:noHistory="true"/>
        <activity
            android:name="com.zaidMansuri.quizapp.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>